{{>./layouts/header}}

{{#article}}
<form class="container p-5" action="/articles/update" method="post">

<!-- 수정 할 글의 id를 컨트롤러로 전달하기 위해서 hidden으로 추가한다
 	hidden form에서 입력받지 않는 id들은 눈에 보이지 않는 데이터지만 id를 가지고 
 	구별해서 각각의 데이터에 접근하는 기준키가 되기때문에 hidden을 이용해서 폼이 전송될때
 	객체 안에 같이 넣어서 전달하기 위해서 hidden쓴다~
 -->
	<input type="hidden" name="id" value="{{id}}" />

	<div class="mb-3">
		<label for="title" class="form-label">제목</label>
		<input type="text" class="form-control" id="title" name="title" value={{title}}/>
	</div>
	<div class="mb-3">
		<label for="content" class="form-label">내용</label>
		<textarea class="form-control" id="content" rows="5" name="content" style="resize: none;">{{content}}</textarea>
	</div>
	<button type="submit" class="btn btn-primary">저장</button>
	
	<!--  목록으로 돌아가기 링크를 추가! -->
	<a href="/articles/{{id}}" class="btn btn-primary">돌아가기</a>
	<a href="/articles" class="btn btn-primary">목록으로</a>
	
	
</form>
{{/article}}