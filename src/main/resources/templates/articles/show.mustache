{{>./layouts/header}}

	<h1 align="center">게시글 상세화면</h1>
	<table class="table">
	  <thead>
	    <tr>
	      <th scope="col">ID</th>
	      <th scope="col">Title</th>
	      <th scope="col">Content</th>
	    </tr>
	  </thead>

	  <tbody class="table-group-divider">
		  <!-- 범위지정 X 의 경우 
		  		컨트롤러에서 넘어오는 Model 객체에 저장되서 
		  		넘어오는 데이터에	"."을 찍어서 멤버에 접근
		 	-->
		 
	  <!-- 컨트롤러에서 넘어오는 Model 객체에 저장되어 넘어오는 값의
	  		사용 범위를 정할 수 있다.
	  		* 범위 지정하면 객체변수명 생략 가능 * -->
	  		
	  {{#article}}	<!-- article 끝 [ #시작, /객체변수명 ] -->
	    <tr>
	      <td>{{id}}</td>
	      <td>{{title}}</td>
	      <td>{{content}}</td>
	    </tr>
	    {{/article}}	<!-- article 끝 -->
	  </tbody>
	</table>

<!-- 목록으로 돌아가는 링크 추가 -->
<a href="/articles" class="btn btn-success">목록으로</a>
<!-- 글 수정 링크 추가 -->
<!-- <a href="/articles/{{id}}/edit" class="btn btn-info">수정하기</a> -->
<!-- 사용범위 외부에서는 컨트롤러에서 넘어오는 내용에 "."을 찍어 접근한다. -->
<a href="/articles/{{article.id}}/edit" class="btn btn-info">수정하기</a>
<!-- 글 삭제 링크 추가 -->
<!-- delete 방식으로 처리해야 하지만 지금은 a 태그로 처리하고 js로 나중에 처리한다. -->
<a href="/articles/{{article.id}}/delete" class="btn btn-danger">삭제하기</a><br/>

